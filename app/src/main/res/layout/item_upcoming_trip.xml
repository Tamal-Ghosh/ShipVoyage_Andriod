<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    style="@style/Widget.ShipVoyage.CardView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Status Badge -->
        <TextView
            android:id="@+id/tripStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONFIRMED"
            style="@style/Badge.Confirmed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tripTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mediterranean Cruise"
            android:maxLines="2"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.ShipVoyage.TitleMedium"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tripStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tripRoute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Barcelona â†’ Rome"
            android:textAppearance="@style/TextAppearance.ShipVoyage.BodyMedium"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tripTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tripRoute" />

        <!-- Date Section -->
        <ImageView
            android:id="@+id/icDate"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@android:drawable/ic_menu_my_calendar"
            app:tint="@color/text_tertiary"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="Date" />

        <TextView
            android:id="@+id/tripDepart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="May 12, 2026"
            android:textAppearance="@style/TextAppearance.ShipVoyage.LabelSmall"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/icDate"
            app:layout_constraintTop_toTopOf="@id/icDate"
            app:layout_constraintBottom_toBottomOf="@id/icDate" />

        <!-- Ship Section -->
        <ImageView
            android:id="@+id/icShip"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@android:drawable/ic_menu_compass"
            app:tint="@color/text_tertiary"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/icDate"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="Ship" />

        <TextView
            android:id="@+id/tripShip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ocean Voyager"
            android:textAppearance="@style/TextAppearance.ShipVoyage.LabelSmall"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/icShip"
            app:layout_constraintTop_toTopOf="@id/icShip"
            app:layout_constraintBottom_toBottomOf="@id/icShip" />
            
        <TextView
            android:id="@+id/tripReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tripShip"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
