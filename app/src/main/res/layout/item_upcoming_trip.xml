<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    style="@style/Widget.ShipVoyage.CardView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tripStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONFIRMED"
            style="@style/Badge.Confirmed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/labelTour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tour:"
            android:textColor="#6B7280"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tripStatus"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tripTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mediterranean Cruise"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/labelTour"
            app:layout_constraintStart_toEndOf="@id/labelTour"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/labelRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Route:"
            android:textColor="#6B7280"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelTour"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tripRoute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Barcelona â†’ Rome"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/labelRoute"
            app:layout_constraintStart_toEndOf="@id/labelRoute"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tripRoute" />

        <TextView
            android:id="@+id/labelDepart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date:"
            android:textColor="#6B7280"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tripDepart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="May 12, 2026"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/labelDepart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/labelDepart"
            app:layout_constraintBottom_toBottomOf="@id/labelDepart" />

        <TextView
            android:id="@+id/labelShip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ship:"
            android:textColor="#6B7280"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelDepart"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tripShip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ocean Voyager"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/labelShip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/labelShip"
            app:layout_constraintBottom_toBottomOf="@id/labelShip" />

        <TextView
            android:id="@+id/tripReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tripShip"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>