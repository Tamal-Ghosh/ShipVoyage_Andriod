<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:id="@+id/manageToursRoot"
    tools:context=".ui.admin.ManageToursActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:title="Manage Tours"
            app:titleTextColor="@color/text_white">

            <ImageButton
                android:id="@+id/menuBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/padding_medium"
                android:src="@drawable/ic_menu_moreoverflow"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:contentDescription="Menu" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/searchContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_medium"
        android:background="@color/surface"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout">

        <EditText
            android:id="@+id/searchField"
            android:layout_width="0dp"
            android:layout_height="@dimen/input_height"
            android:layout_weight="1"
            android:hint="Search by name or route"
            android:padding="@dimen/padding_medium"
            android:background="@color/card_bg"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_tertiary" />

        <Button
            android:id="@+id/searchBtn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:text="Search"
            style="@style/ButtonStyle.Accent"
            android:layout_marginStart="@dimen/padding_medium" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/toursRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="@dimen/padding_small"
        app:layout_constraintTop_toBottomOf="@id/searchContainer"
        app:layout_constraintBottom_toTopOf="@id/formContainer"
        tools:listitem="@layout/item_tour" />

    <LinearLayout
        android:id="@+id/formContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_large"
        android:background="@color/surface"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/padding_small">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tour Name"
                    style="@style/TextAppearance.Body"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/padding_xsmall" />

                <EditText
                    android:id="@+id/nameField"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_height"
                    android:hint="Enter Tour Name"
                    android:padding="@dimen/padding_medium"
                    android:background="@color/card_bg"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_tertiary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/padding_small">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From"
                    style="@style/TextAppearance.Body"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/padding_xsmall" />

                <EditText
                    android:id="@+id/fromField"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_height"
                    android:hint="From Location"
                    android:padding="@dimen/padding_medium"
                    android:background="@color/card_bg"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_tertiary" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/padding_medium"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/padding_small">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To"
                    style="@style/TextAppearance.Body"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/padding_xsmall" />

                <EditText
                    android:id="@+id/toField"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_height"
                    android:hint="To Location"
                    android:padding="@dimen/padding_medium"
                    android:background="@color/card_bg"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_tertiary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/padding_small">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    style="@style/TextAppearance.Body"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/padding_xsmall" />

                <EditText
                    android:id="@+id/descriptionField"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_height"
                    android:hint="Description"
                    android:padding="@dimen/padding_medium"
                    android:background="@color/card_bg"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_tertiary" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="@dimen/padding_large">

            <Button
                android:id="@+id/cancelBtn"
                android:layout_width="100dp"
                android:layout_height="@dimen/button_height_small"
                android:text="Cancel"
                style="@style/ButtonStyle.Ghost"
                android:layout_marginEnd="@dimen/padding_medium" />

            <Button
                android:id="@+id/saveBtn"
                android:layout_width="100dp"
                android:layout_height="@dimen/button_height_small"
                android:text="Save"
                style="@style/ButtonStyle.Primary" />

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:menu="@menu/admin_bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

