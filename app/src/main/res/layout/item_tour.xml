<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    style="@style/Widget.ShipVoyage.CardView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tourName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Caribbean Delight"
            android:textAppearance="@style/TextAppearance.ShipVoyage.TitleMedium"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editBtn" />

        <TextView
            android:id="@+id/tourRoute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Miami â†’ Nassau"
            android:textAppearance="@style/TextAppearance.ShipVoyage.BodyMedium"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editBtn"
            app:layout_constraintTop_toBottomOf="@+id/tourName" />

        <TextView
            android:id="@+id/tourDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="A wonderful journey through the crystal clear waters..."
            android:maxLines="2"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.ShipVoyage.LabelSmall"
            android:textColor="@color/text_tertiary"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tourRoute"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Actions -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/editBtn"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@android:drawable/ic_menu_edit"
            app:iconTint="@color/secondary"
            app:layout_constraintEnd_toStartOf="@+id/deleteBtn"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/deleteBtn"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@android:drawable/ic_menu_delete"
            app:iconTint="@color/error"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
