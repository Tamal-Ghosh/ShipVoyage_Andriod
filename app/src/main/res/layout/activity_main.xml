<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ShipVoyage"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Your Portal"
        android:textSize="16sp"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subtitleText">

        <!-- Admin Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Panel"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/adminDashboardButton"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Admin Dashboard"
            android:textColor="@android:color/white"
            style="@style/ButtonStyle.Primary" />

        <!-- Manage Button (Collapsible) -->
        <Button
            android:id="@+id/manageButton"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Manage ▼"
            android:textColor="@android:color/white"
            style="@style/ButtonStyle.Primary" />

        <!-- Manage Submenu (Hidden by default) -->
        <LinearLayout
            android:id="@+id/manageSubmenu"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="4dp">

            <Button
                android:id="@+id/manageShipsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  • Manage Ships"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp"
                android:backgroundTint="#3a7ca5"
                style="@style/ButtonStyle.Primary" />

            <Button
                android:id="@+id/manageRoomsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  • Manage Rooms"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp"
                android:backgroundTint="#3a7ca5"
                style="@style/ButtonStyle.Primary" />

            <Button
                android:id="@+id/manageToursButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  • Manage Tours"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp"
                android:backgroundTint="#3a7ca5"
                style="@style/ButtonStyle.Primary" />

            <Button
                android:id="@+id/manageInstancesButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  • Tour Instances"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp"
                android:backgroundTint="#3a7ca5"
                style="@style/ButtonStyle.Primary" />

            <Button
                android:id="@+id/manageFeaturedPhotosButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  • Featured Photos"
                android:textColor="@android:color/white"
                android:backgroundTint="#3a7ca5"
                style="@style/ButtonStyle.Primary" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="240dp"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="@color/divider" />

        <!-- Passenger Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passenger Portal"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/secondary"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/passengerHomeButton"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Browse Tours"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/secondary"
            style="@style/ButtonStyle.Primary" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>