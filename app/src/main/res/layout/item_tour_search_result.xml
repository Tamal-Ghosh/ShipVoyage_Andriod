<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tourName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tour Name"
            android:textColor="#1E3A8A"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tourRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="From â†’ To"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/departDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Depart: 2025-01-01"
            android:textColor="#666666"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/returnDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Return: 2025-01-10"
            android:textColor="#666666"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Duration: 9 days"
            android:textColor="#666666"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/shipName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Ship: Ocean Voyager"
            android:textColor="#666666"
            android:textSize="11sp" />

        <Button
            android:id="@+id/bookButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/accent"
            android:text="Book Now"
            android:textColor="@color/text_white" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
