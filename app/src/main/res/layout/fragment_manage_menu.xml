<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Options"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/manageShipsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Ships"
        android:layout_marginBottom="12dp"
        android:textColor="@android:color/white"
        style="@style/ButtonStyle.Primary" />

    <Button
        android:id="@+id/manageRoomsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Rooms"
        android:layout_marginBottom="12dp"
        android:textColor="@android:color/white"
        style="@style/ButtonStyle.Primary" />

    <Button
        android:id="@+id/manageToursBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Tours"
        android:layout_marginBottom="12dp"
        android:textColor="@android:color/white"
        style="@style/ButtonStyle.Primary" />

    <Button
        android:id="@+id/manageTourInstancesBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tour Instances"
        android:layout_marginBottom="12dp"
        android:textColor="@android:color/white"
        style="@style/ButtonStyle.Primary" />

    <Button
        android:id="@+id/manageFeaturedPhotosBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Featured Photos"
        android:textColor="@android:color/white"
        style="@style/ButtonStyle.Primary" />

</LinearLayout>
