<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:colorForeground">@color/text_primary</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance" parent="android:TextAppearance" />

    <style name="TextAppearance.SectionTitle" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_size_section_title</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Heading" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_size_heading</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Title" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Subtitle" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.Body" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.BodySmall" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/text_tertiary</item>
    </style>

    <!-- Button Styles -->
    <style name="ButtonStyle.Primary" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/text_white</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
        <item name="android:textSize">@dimen/text_size_subtitle</item>
    </style>

    <style name="ButtonStyle.Secondary" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/text_white</item>
        <item name="backgroundTint">@color/secondary</item>
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
        <item name="android:textSize">@dimen/text_size_subtitle</item>
    </style>

    <style name="ButtonStyle.Accent" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/text_white</item>
        <item name="backgroundTint">@color/accent</item>
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
        <item name="android:textSize">@dimen/text_size_subtitle</item>
    </style>

    <style name="ButtonStyle.Ghost" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
        <item name="strokeColor">@color/border</item>
    </style>

    <!-- Card Styles -->
    <style name="CardStyle" />
    
    <style name="CardStyle.Default">
        <item name="android:background">@color/card_bg</item>
        <item name="android:elevation">@dimen/elevation_medium</item>
    </style>

    <!-- Input Field Styles -->
    <style name="EditTextStyle" />
    
    <style name="EditTextStyle.Outline">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_tertiary</item>
        <item name="android:paddingStart">@dimen/input_padding</item>
        <item name="android:paddingEnd">@dimen/input_padding</item>
        <item name="android:paddingTop">@dimen/input_padding</item>
        <item name="android:paddingBottom">@dimen/input_padding</item>
    </style>

    <!-- Status Badge Styles -->
    <style name="Badge" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:paddingStart">@dimen/padding_small</item>
        <item name="android:paddingEnd">@dimen/padding_small</item>
        <item name="android:paddingTop">@dimen/padding_xsmall</item>
        <item name="android:paddingBottom">@dimen/padding_xsmall</item>
    </style>

    <style name="Badge.Confirmed" parent="Badge">
        <item name="android:textColor">@color/status_confirmed_text</item>
        <item name="backgroundTint">@color/status_confirmed</item>
    </style>

    <style name="Badge.Pending" parent="Badge">
        <item name="android:textColor">@color/status_pending_text</item>
        <item name="backgroundTint">@color/status_pending</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
</resources>
